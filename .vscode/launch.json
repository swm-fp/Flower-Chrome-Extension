    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}",
            "runtimeExecutable": "${workspaceFolder}/node_modules/@babel/node/bin/babel-node.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Serverless Test",
            "program": "${file}",
            "runtimeExecutable": "yarn",
            "cwd": "${workspaceFolder}/serverless",
            "runtimeArgs": ["run","mocha","--require","@babel/register"]

        }
    ]
}